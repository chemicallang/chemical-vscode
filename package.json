{
    "name": "chemical-vscode",
    "displayName": "Chemical",
    "description": "VSCode extension for Chemical programming language",
    "version": "0.0.33",
    "publisher": "chemical",
    "license": "EPL-1.0",
    "icon" : "./icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/chemicallang/chemical"
    },
    "bugs": {
        "url": "https://github.com/chemicallang/chemical-vscode/issues"
    },
    "engines": {
        "vscode": "^1.67.1"
    },
    "categories": [
        "Programming Languages"
    ],
    "main": "./out/extension",
    "activationEvents": [
        "onLanguage:semanticLanguage",
        "onLanguage:chemical"
    ],
    "contributes": {
        "configurationDefaults": {
            "[chemical]": {
                "editor.semanticHighlighting.enabled": true
            }
        },
        "languages": [
            {
                "id": "chemical",
                "aliases": [
                    "chemical"
                ],
                "extensions": [
                    ".ch",
                    ".lab"
                ],
                "configuration": "./chemical.configuration.json"
            }
        ]
    },
    "devDependencies": {
        "@types/node": "^17.0.45",
        "@types/vscode": "^1.67.0",
        "@vscode/test-electron": "^2.1.3",
        "typescript": "^4.6.4"
    },
    "dependencies": {
        "vscode-languageclient": "^8.0.1"
    },
    "scripts": {
        "prepublish": "tsc -p ./",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "update-vscode": "node ./node_modules/vscode/bin/install"
    }
}
